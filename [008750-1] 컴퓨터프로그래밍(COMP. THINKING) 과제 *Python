#System-------------------------------------------------------------------------------------

def 입력오류출력():
  global input_error

  print("\n잘못된 요청입니다. 올바른 숫자를 입력하십시오.\n")
  input_error +=1
  print("입력오류 총 ",input_error,"회 발생")
  
  if input_error >= 10:
    ED1()

class Colors:
  RED = '\033[31m'
  GREEN = '\033[32m'
  YELLOW = '\033[33m'
  BLUE = '\033[34m'
  RESET = '\033[0m'

def Progres_Up():
  global progress
  progress += 1
  #progressup 작동 확인용
  print("\n"+Colors.RED+"Progress :"+progress+Colors.RESET+"\n")

