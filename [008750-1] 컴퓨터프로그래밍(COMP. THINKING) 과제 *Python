def 선택지출력B():
  global B_a
  global work
  global acess
  global hongik
  global progress
  global curiosity
  
  선택지=input()
  if (선택지 == "1"):
    if progress == 1:
      curiosity += 1
      B_a += 1
      print("\n---------------\n")
      선택지출력B_1()
    if progress == 3:
      curiosity += 1
      print("첨부파일_내용출력 (프로젝트1)")
      Progres_Up()
      선택지출력C()
    if progress == 5:
      curiosity += 1
      print("첨부파일_내용출력 (리트머스 내용)")
      Progres_Up()
      선택지출력C()
  if (선택지 == "2"):
    if progress == 1:
      curiosity += 1
      B_a += 2
      print("\n---------------\n")
      선택지출력B_2()
    if progress ==3:
      work += 1
      acess += 1
      Progres_Up()
      Progres_Up()
      print("프로젝트를 승인했습니다.")
      time.sleep(2)
      print("\n\n---------------\
      \n\n오늘의 업무가 종료되었습니다.\
      \n오늘도 수고하셨습니다.")
    if progress ==5:
      work += 1
      acess += 1
      Progres_Up()
      Progres_Up()
      print("프로젝트를 승인했습니다.")
      time.sleep(2)
      print("\n\n---------------\
      \n\n오늘의 업무가 종료되었습니다.\
      \n오늘도 수고하셨습니다.")
  if (선택지 == "3"):
    if progress == 1:
      Progres_Up()
      print("\n---------------\n")
    if progress ==3:
      Progres_Up()
      Progres_Up()
      print("프로젝트를 불허했습니다.")
      time.sleep(2)
      print("\n\n---------------\
      \n\n오늘의 업무가 종료되었습니다.\
      \n오늘도 수고하셨습니다.")
    if progress ==5:
      Progres_Up()
      Progres_Up()
      hongik += 1
      print("프로젝트를 불허했습니다.")
      time.sleep(2)
      print("\n\n---------------\
      \n\n오늘의 업무가 종료되었습니다.\
      \n오늘도 수고하셨습니다.")
  
  else :
    입력오류출력()
    선택지출력B()

