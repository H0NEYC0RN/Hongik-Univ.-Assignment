import sys
import time

global B_a
global 진행
global 호기심
global 입력오류

B_a = 0

진행 = 0
호기심 = 0
입력오류 = 0


#System-------------------------------------------------------------------------------------


def 입력오류출력():
  global 입력오류

  print("\n잘못된 요청입니다. 올바른 숫자를 입력하십시오.\n")
  입력오류 +=1
  print("입력오류 총 ",입력오류,"회 발생")
  
  if 입력오류 >= 10:
    ED1()


#OP Scean-1-------------------------------------------------------------------------------------



def 오프닝1(): 
    print("어서오세요 관리자.\n이번 A-14지부 관리직 입사 프로그램에 합격하신 것을 축하드립니다.\
    \n관리직에 대한 회사 내규에 따라, 당신의 입사 이전 기억들을 삭제했음을 알려드립니다.\
    \n저는 앞으로 당신의 업무를 돕기위한 AI, 모나미라고 합니다.\
    \n\n당신의 업무는 간단합니다.\
    \n회사에 문제가 발생할시, 저는 당신에게 해당 문제에 대해 보고합니다.\
    \n당신은 그 문제를 어떻게 해결할 것 인지 선택해야 합니다.\
    \n\n선택 방법은 간단합니다. 자리에 설치되어있는 모니터와 키보드를 이용해, 주어진 선택지의 숫자를 입력하면 됩니다.\
    \n\n제대로 이해하셨습니까?\
    \n\n---------------\
    \n1. 제대로 이해했습니다.\
    \n2. 정확하게 이해했습니다.")
    선택지출력A()

def 선택지출력A():
  global 진행
  global 입력오류
  
  선택지=input()
  if (선택지 == "1" or 선택지 == "2"):
    진행 += 1
    print("\n---------------\n")
  else:
    입력오류출력()
    선택지출력A()


#OP Scean-2-------------------------------------------------------------------------------------

def 선택지출력B():
  global B_a
  global 진행
  global 호기심
  
  선택지=input()
  if (선택지 == "1"):
    호기심 += 1
    B_a += 1
    print("\n---------------\n")
    선택지출력B_1()
  else:
    if (선택지 == "2"):
      호기심 += 1
      B_a += 2
      print("\n---------------\n")
      선택지출력B_2()
    else:
      if (선택지 == "3"):
       진행 += 1
       print("\n---------------\n")
      else :
        입력오류출력()
        선택지출력B()

def 오프닝2():
  print("\n완벽합니다. 질문이 있습니까?\
  \n\n---------------\
    \n1. 당신이 누구인지에 대해서.\
    \n2. 이곳이 어디인가에 대해서.\
    \n3. 없다.")
  선택지출력B()

def 선택지출력B_1():
  if (진행 == 1):
    print("\n당신은 2222년 05월 13일, C구역에서 출생한 시민번호 [열람 권한이 없습니다.] 입니다.\
    \nB등급 시민인 당신은 지난 13월 본 사의 동계 관리직 입사 프로그램에 참여하여 최종 선발되었습니다.\
    \n\n---------------\
    \n1. 이곳이 어디인가에 대해서.\
    \n2. 더 이상 질문이 없다.")
    선택지출력C()

def 선택지출력B_2():
  if (진행 == 1):
    print ("\n이곳은 본 사의 AI 관리실입니다.\
    \n본 사의 사명은 '아침'으로, 셀트리온 전 지역의 AI를 개발 및 관리하는 기업입니다.\
    \n당신이 소속한 부서는 AI 인사 관리 부서입니다.\
    \n\n---------------\
    \n1. 당신이 누구인지에 대해서.\
    \n2. 더 이상 질문이 없다.")
    선택지출력C()

def 선택지출력C():
  global B_a
  global 진행
  global 호기심
  선택지=input()
  if (선택지 == "1"):
    if (B_a == 1):
      호기심 += 1
      print("\n---------------\
      \n\n이곳은 본 사의 AI 관리실입니다.\
      \n본 사의 사명은 '아침'으로, 셀트리온 전 지역의 AI를 개발 및 관리하는 기업입니다.\
      \n당신이 소속한 부서는 AI 인사 관리 부서입니다.\
      \n\n---------------\
      \n1. 더 이상 질문이 없다.")
      선택지출력D()
    else:
      if (B_a == 2):
        호기심 += 1
        print("\n---------------\
        \n\n당신은 2222년 05월 13일, C구역에서 출생한 시민번호 [열람 권한이 없습니다.] 입니다.\
        \nB등급 시민인 당신은 지난 13월 본 사의 동계 관리직 입사 프로그램에 참여하여 최종 선발되었습니다.\
        \n\n---------------\
        \n1. 더 이상 질문이 없다.")
        선택지출력D()

    if (선택지 == "2"):
      진행 += 1
      print("\n---------------\n")
  else :
    입력오류출력()
    선택지출력C()

def 선택지출력D():
  global 진행
  
  선택지=input()
  if (선택지 == "1"):
    진행 += 1
  else:
    입력오류출력()
    선택지출력D()


#OP Scean-3-------------------------------------------------------------------------------------

def 오프닝3():
  print("\n---------------\
  \n\n좋습니다.\
  \n\n당신의 관리 결과와 결과에 대한 고객만족도는\
  \n전부 본 사의 AI 데이터베이스에 저장됩니다.\
  \n\nAI 데이터베이스 분석을 통해 매 주마다 당신의 인사평가가 진행됩니다.\
  \n평가 결과에 따라 당신은 해고될 수 있고,\
  \n본 사는 퇴사 시 입사계약서에 의거하여 당신의 본 사와 관련된 모든 기억을 삭제합니다.\
  \n또한, 본 사는 해고 직원에 대해 입사 전 기억에 대한 복구 프로그램을 지원하지 않음 알려드립니다.")


#Main Scean-3-------------------------------------------------------------------------------------

def 메인1():
  print("\n\n좋은 아침.\
  \n오늘은 2042년 1월 7일입니다.\
  \n\n오늘의 업무를 시작하겠습니다.")

  time.sleep(3)

  print("\n---------------\
  \n\n[]")

#END-Scean-------------------------------------------------------------------------------------

def ED1():
  print("\n10회 이상의 입력오류가 발생했습니다.\
  \n보안을 위해 프로그램이 강제 종료됩니다.\
  \n---------------\
  \n\nED 0 : 강제종료\
  \n\n---------------\
  \n다시 시작하려면 restart 를 입력하십시오.\n")
  선택지=input()
  if (선택지 == "restart" or 선택지 =="Restart"):
    씬_재실행()
  else:
    print("\n프로그램을 종료합니다.\n")
    sys.exit()


#--------------------------------------------------------------------------------------------
#씬 순서정리 / 실행()

def 씬_재실행():
  오프닝1()
  오프닝2()
  오프닝3()
  time.sleep(3)
  메인1()

씬_재실행()
